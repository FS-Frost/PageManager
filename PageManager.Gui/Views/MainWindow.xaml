<Window
    x:Class="PageManager.Gui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:PageManager.Gui"
    mc:Ignorable="d"
    Title="Page Manager"
    Height="335"
    Width="532"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized">
    <Grid>
        <Menu
            VerticalContentAlignment="Center"
            Grid.Row="0"
            VerticalAlignment="Top">
            <MenuItem
                x:Name="menuAbout"
                Header="Acerca de" />
        </Menu>
        <Button
            x:Name="btnGetPosts"
            Content="Actualizar"
            HorizontalAlignment="Right"
            Margin="0,0,10,10"
            Height="30"
            VerticalAlignment="Bottom" />
        <DataGrid
            x:Name="dgPosts"
            Margin="0,38,0,45"
            IsReadOnly="True" />
        <Button
            x:Name="btnCreate"
            Content="Crear"
            Margin="0,0,115,10"
            HorizontalAlignment="Right"
            Width="100"
            Height="30"
            VerticalAlignment="Bottom" />

    </Grid>
</Window>
